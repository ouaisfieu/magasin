{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ouaisfi.eu manifest",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "url"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "note": {
            "type": "string"
          },
          "thumb": {
            "type": "string"
          },
          "info": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "run": {
            "type": "string"
          },
          "type": {
            "enum": [
              "pdf",
              "image",
              "video",
              "audio",
              "zip",
              "md",
              "script",
              "other"
            ]
          },
          "size": {
            "type": "number",
            "minimum": 0
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "created": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "badges": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "variant": {
                      "type": "string"
                    },
                    "label": {
                      "type": "string"
                    },
                    "emoji": {
                      "type": "string"
                    },
                    "color": {
                      "type": "string"
                    }
                  }
                }
              ]
            }
          },
          "descFx": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "descClass": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "items"
  ],
  "additionalProperties": false
}